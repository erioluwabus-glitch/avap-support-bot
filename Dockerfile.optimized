FROM python:3.11-slim

# Prevent Python from writing .pyc files and enable unbuffered logs
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# System deps: FFmpeg (system version) + dev headers for deps
# Add PostgreSQL dev libs for psycopg2-binary/asyncpg fallback
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavdevice-dev \
    libavutil-dev \
    libavfilter-dev \
    libswscale-dev \
    libswresample-dev \
    build-essential \
    pkg-config \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Help pkg-config locate FFmpeg .pc files
ENV PKG_CONFIG_PATH=/usr/lib/x86_64-linux-gnu/pkgconfig:/usr/local/lib/pkgconfig:$PKG_CONFIG_PATH

WORKDIR /app

# Install Python dependencies in stages to leverage cache
COPY requirements.txt ./

# Install core dependencies first (smaller packages)
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    setuptools>=65.0.0 \
    wheel>=0.40.0 \
    python-dotenv==1.0.1 \
    requests==2.32.5 \
    pydantic==2.11.9 \
    uvicorn==0.30.0 \
    fastapi==0.111.0 \
    sqlalchemy==2.0.43 \
    aiohttp==3.9.5 \
    slowapi==0.1.9 \
    prometheus-client==0.20.0 \
    structlog==24.4.0 \
    psutil>=5.9.0

# Install medium dependencies
RUN pip install --no-cache-dir \
    python-telegram-bot[job-queue]==22.5 \
    apscheduler==3.10.4 \
    apscheduler[jobstores]==3.10.4 \
    gspread==6.1.2 \
    google-auth==2.34.0 \
    google-auth-oauthlib==1.2.1 \
    supabase>=2.4.2 \
    asyncpg==0.29.0 \
    psycopg2-binary==2.9.9 \
    oauth2client==4.1.3 \
    google-api-python-client==2.149.0

# Install AI dependencies last (largest packages)
RUN pip install --no-cache-dir \
    openai==1.0.0 \
    deep-translator==1.10.1

# Copy the rest of the application
COPY . .

# Expose Render default port
EXPOSE 10000

# Start the FastAPI webhook app on Render-provided PORT
ENV PORT=10000
CMD ["sh", "-c", "uvicorn avap_bot.bot:app --host 0.0.0.0 --port ${PORT}"]
